<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff000000" 
    >
    
    <!-- top frame -->
    <FrameLayout
	    android:id="@+id/top_light"
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:layout_weight="1"
    >
		<ImageView
		    android:id="@+id/top_light_img"
		    android:src="@drawable/lightbulb_hor"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
            android:scaleType="fitXY"
		/>
    </FrameLayout>
  
    <!-- mid frame -->
    <RelativeLayout 
        android:id="@+id/cam_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6" >
		
        <FrameLayout 
            android:id="@+id/left_light_img_frm"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" >
            
            <ImageView
			    android:id="@+id/left_light_img"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
				android:src="@drawable/lightbulb_ver"
				android:scaleType="fitXY"
			/>
        </FrameLayout>
        
        <FrameLayout 
            android:id="@+id/right_light_img_frm"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true" >
                
	        <ImageView
	            android:id="@+id/right_light_img"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/lightbulb_ver"
                android:scaleType="fitXY"
	        />
        </FrameLayout>
        
	    <FrameLayout
			android:id="@+id/camera_preview"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_toRightOf="@id/left_light_img_frm"
	        android:layout_toLeftOf="@id/right_light_img_frm" >
		</FrameLayout>
		
	    <!-- the overlay -->
	    <RelativeLayout 
	        android:id="@+id/instruction"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
	        
            <TextView 
                android:id="@+id/inst_txt"
                android:tag="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:textSize="20sp"
                android:text="Swipe Down"
            />
            <ImageView
                android:id="@+id/inst_arr"
                android:tag="arrow_dn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down1"
                android:scaleType="fitXY"
                android:layout_below="@id/inst_txt"
                android:paddingTop="10dp"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>

        
    </RelativeLayout>

	<!-- bot frame -->
	<FrameLayout
		android:id="@+id/bot_light"
		android:layout_width="fill_parent"
		android:layout_height="80dp"
		android:layout_weight="1"
	  >
		<ImageView
		    android:id="@+id/bot_light_img"
		    android:src="@drawable/lightbulb_hor"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
            android:scaleType="fitXY"
		/>
	</FrameLayout>

  
</LinearLayout>
